  <dubbo:registry address="zookeeper://127.0.0.1:2181" />
  <!-- 和本地bean一样实现服务 --> 
  <dubbo:reference id="goodsService" interface="com.github.cxt.MyDubboProvider.GoodsManager" check="false" retries="0"/>
  
